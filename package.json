{
  "name": "@operational/components",
  "version": "8.0.1",
  "description": "Building blocks for effective operational user interfaces",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "repository": "git@github.com:contiamo/operational-ui.git",
  "author": "Contiamo Frontend <frontend@contiamo.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib/"
  ],
  "scripts": {
    "dev": "parcel dev-server/index.html",
    "start": "styleguidist server",
    "build": "run-p build:*",
    "build:styleguide": "styleguidist build",
    "build:package": "rimraf lib && tsc -d",
    "watch": "npm run build:package -- -w",
    "test": "jest --outputFile test-results.json --json --maxWorkers=$JEST_MAX_WORKERS",
    "test:watch": "jest --watch",
    "preversion": "npm run build",
    "version": "auto-changelog && git add CHANGELOG.md",
    "precommit": "lint-staged",
    "danger:ci": "danger ci",
    "danger": "run-p danger:*",
    "ci": "run-s test && run-p danger build"
  },
  "lint-staged": {
    "*.(js|jsx|json|md)": [
      "prettier --write",
      "git add"
    ],
    "*.(ts|tsx)": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "peerDependencies": {
    "emotion": "^9.2.5",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-emotion": "^9.2.5"
  },
  "jest": {
    "setupFiles": [
      "./test-polyfills.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest/preprocessor.js"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": "/__tests__/.*\\.(ts|tsx|js|jsx)$",
    "setupTestFrameworkScriptFile": "jest-enzyme",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "dependencies": {
    "create-emotion-styled": "^9.2.6",
    "emotion": "^9.2.5",
    "emotion-theming": "^9.2.6",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "react": "^16.4.1",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^16.4.1",
    "react-emotion": "^9.2.6",
    "react-highlight": "^0.12.0",
    "react-json-view": "^1.19.1",
    "react-waypoint": "^8.0.3",
    "tinycolor2": "^1.4.1",
    "url-regex": "^4.1.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.12",
    "@types/jest": "^23.3.0",
    "@types/lodash": "^4.14.115",
    "@types/react": "^16.4.6",
    "@types/react-copy-to-clipboard": "^4.2.5",
    "@types/react-dom": "^16.0.6",
    "@types/react-router": "^4.0.28",
    "@types/tinycolor2": "^1.4.0",
    "@types/url-regex": "^4.1.0",
    "auto-changelog": "^1.8.0",
    "danger": "^3.8.6",
    "danger-plugin-jest": "^1.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.0.0-beta6",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "jest-enzyme": "^6.0.2",
    "jest-serializer-enzyme": "^1.0.0",
    "lint-staged": "^7.2.0",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.9.7",
    "prettier": "^1.13.7",
    "react-docgen-typescript": "^1.6.2",
    "react-styleguidist": "^7.1.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.0",
    "ts-loader": "^4.4.2",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-plugin-blank-line": "^0.0.8",
    "typescript": "3.1.0-dev.20180803",
    "webpack": "^4.16.2"
  }
}
